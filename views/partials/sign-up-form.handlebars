<div class="card w-50 border-info">
    <div class="card-header text-center border-info">
        <h3>Create an Account</h3>
    </div>
    <div class="card-body">
        <form class="m-3">

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Name</span>
                </div>
                <input type="text" aria-label="First name" id="first-name" class="form-control"
                    placeholder="First Name">
                <input type="text" aria-label="Last name" id="last-name" class="form-control" placeholder="Last Name">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Date of Birth</span>
                </div>
                <input id="date-of-birth" name="textinput" type="date" placeholder="placeholder"
                    class="form-control input-md">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Location</span>
                </div>
                <input type="text" aria-label="City" id="city" class="form-control" placeholder="City">
                <input type="text" aria-label="Country" id="country" class="form-control" placeholder="Country">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Programming languages</span>
                </div>
                <input type="text" aria-label="Programming languages" class="form-control" id="programming-languages"
                    placeholder="Programming languages">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Email Address</span>
                </div>
                <input type="email" class="form-control" id="email" placeholder="Email" aria-label="Email"
                    aria-describedby="email">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">password</span>
                </div>
                <input type="password" class="form-control" id="password" placeholder="Password" aria-label="Password"
                    aria-describedby="password">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Password</span>
                </div>
                <input type="password" class="form-control" id="verify-password" placeholder="Password"
                    aria-label="Password" aria-describedby="verify-password">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-warning m-3 text-center pl-4 pr-4" id="sign-up-button">Sign
                    Up</button>
            </div>
        </form>
    </div>
</div>